/**
 * Example device tree configuration of the SPI interface for NXP SJA1110
 */

/ {
	ecspi@02008000 {
		#address-cells = <0x1>;
		#size-cells = <0x0>;
		compatible = "fsl,imx6q-ecspi", "fsl,imx51-ecspi";
		reg = <0x2008000 0x4000>;
		interrupts = <0x0 0x1f 0x4>;
		clocks = <0x3 0x70 0x3 0x70>;
		clock-names = "ipg", "per";
		dmas = <0x6 0x3 0x7 0x1 0x6 0x4 0x7 0x2>;
		dma-names = "rx", "tx";
		status = "okay";
		fsl,spi-num-chipselects = <0x1>;
		cs-gpios = <0x9 0x13 0x0>;
		pinctrl-names = "default";
		pinctrl-0 = <0xa 0xb>;
		pinctrl-assert-gpios = <0xc 0x4 0x1>;

		/* the switch */
		sja1110@0 {
			compatible = "nxp,sja1110-switch";
			spi-max-frequency = <8000000>;
			reset-gpio = <195>;
			reg = <0x0>; /* CS */
		};

		/* the ÂµC controlling the switch */
		sja1110@1 {
			compatible = "nxp,sja1110-uc";
			spi-max-frequency = <12000000>;
			reg = <0x1>; /* CS */
		};
	};
};
